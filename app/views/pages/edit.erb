

<h1> Edit Page <%= @page.title %> </h1>

<div class="">
<form class="" action="/pages/<%= @page.id%>" method="post">
    <input type="hidden" name="_method" value="patch">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= @page.title %>" id="title">
    <label for="content">Content</label>
    <textarea name="content" rows="8" cols="80" id="content"><%= @page.content %></textarea>
    <input type="submit" name="" value="Edit">
</form>

    <form class="" action="/pages/<%= @page.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <input type="submit" name="" value="Delete This Page">
    </form>

</div>
