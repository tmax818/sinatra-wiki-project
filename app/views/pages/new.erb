<% if logged_in? && current_user.id == session[:id] %>

<h1>New page for <%= current_user.username %></h1>
<div class="">
<form class="" action="/pages" method="post">
    <label for="title">Title:</label>
    <input type="text" name="title" value="" id="title">
    <br>
    <label for="content">Content:</label>
    <textarea name="content" value="" rows="8" cols="30" id="content"></textarea>
    <input type="submit" name="" value="Save">
</form>
</div>
<% else %>
<h1>You must be logged in to view this page!</h1>
<a href="/users/login">Click here to Login</a>
<% end %>
